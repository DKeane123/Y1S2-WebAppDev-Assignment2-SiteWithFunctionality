<div class="ui centered cards">
  {{#each genres}}
    <div class="ui card">
      <div class="image">
        <img src="{{picture}}">
      </div>
      <div class="content">
        <a class="header">{{uppercase title}}</a>
        <div class="metadata">
          <span class="date">Created: {{formatDate date}}</span>
        </div>
        <a class="description">{{description}}</a>
      </div>
      <div class="extra content">
        <a href="/gamelist/{{id}}" class="ui icon button">
          <i class="ui open folder icon"></i>
        </a>
        <a href="/review-board/deletegenre/{{id}}" class="ui icon button delgenre">
          <i class="ui trash icon"></i>
        </a>
      </div>
    </div>
  {{/each}}
</div>
